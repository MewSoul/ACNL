<h3 style="margin-top: 50px">S'enregistrer</h3>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
<%= devise_error_messages! %>
<div id="wrap" style="padding-left: 75px">
  <div class="span3" id="left">
<div>
    Pseudo
    <br/>
    <%= f.text_field :name %>
</div>

<div>
  Ville
  <br/>
  <%= f.text_field :city %>
</div>

<div>
  Code ami (forme : 1234-1234-1234)
  <br/>
  <%= f.text_field :codeami %>
</div>
</div>

  <div class="span3" id="right">
<div>
  Email
  <br/>
  <%= f.email_field :email %>
</div>

<div>
  Mot de passe
  <br/>
  <%= f.password_field :password %>
</div>

<div>
  Confirmer le mot de passe
  <br/>
  <%= f.password_field :password_confirmation %>
  </div>
  </div>

  <div style="margin-top: 150px; margin-left: -60px">
    <input class="btn btn-primary" name="commit" type="submit" value="Valider">
  </div>
<% end %>
