<h3 style="margin-top: 30px">Sujet : <%= conversation.subject %></h3>
<% conversation.mark_as_read(current_user) %>
<table class="table table-bordered table-hover" style="table-layout: fixed; word-wrap: break-word; margin: 0 auto; float: none; max-width: 1170px; background:white;">
  <tr>
    <th style="width:200px">Pseudo</th>
    <th>Message</th>
  </tr>
  <tbody>
    <%= content_tag_for(:p, conversation.receipts_for(current_user)) do |receipt| %>
    <% message = receipt.message %>
    <div>
      <tr>
	<td><%= message.sender.name %></td>
	<td><%= message.body %></td>
      </tr>
    </div>
    <% end %>
    </tbody>
  </table>

<%= render 'messages/form', conversation: conversation %>
